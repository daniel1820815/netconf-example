<filter>
    <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
            <name>default</name>
            <protocols>
                <protocol>
                    <identifier xmlns:oc-pol-types="http://openconfig.net/yang/policy-types">oc-pol-types:BGP</identifier>
                    <name>bgp</name>
                    <bgp>
                        <neighbors>
                            <neighbor>
                                <state>
                                    <session-state>ESTABLISHED</session-state>
                                </state>
                            </neighbor>
                        </neighbors>
                    </bgp>
                </protocol>
            </protocols>
        </network-instance>
    </network-instances>
</filter>